<?xml version="1.0"?>
<odoo>

    <record id="view_res_partner_form_dtp" model="ir.ui.view">
        <field name="name">res.partner.form.dtp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <data>
                <field name="property_payment_term_id" position="after">
                    <field name="d2p_ytd"/>
                    <field name="d2p_life"/>
                </field>

                <field name="property_supplier_payment_term_id" position="after">
                    <field name="d2r_ytd"/>
                    <field name="d2r_life"/>
                </field>

                <field name="credit" position="replace">
                    <field name="credit" modifiers="{'readonly': true}"/>
                </field>

                <field name="debit" position="replace">
                    <field name="debit" modifiers="{'readonly': true}"/>
                </field>
            </data>
        </field>
    </record>

</odoo>
